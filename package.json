{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "server.js",
  "engines": {
    "node": "~10.13.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec babel-node src/server",
    "lint": "eslint src/**/*.js && eslint client/**/*.js",
    "lint:fix": "prettier-eslint src/**/*.js --write && prettier-eslint client/**/*.js",
    "clean": "rm -rf dist && mkdir dist",
    "build:server": "babel --out-dir dist src",
    "build:client": "next build client",
    "build": "yarn run clean && yarn run build-server",
    "test": "set NODE_ENV=test&& mocha --opts mocha.opts src/tests --exit",
    "test:user": "set NODE_ENV=test&& mocha --opts mocha.opts src/tests/user.test.js --exit",
    "test:profile": "set NODE_ENV=test&& mocha --opts mocha.opts -A src/tests/profile.test.js --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint:fix",
      "git add"
    ]
  },
  "author": "Karim Laayoun",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.5",
    "@types/gravatar": "^1.4.28",
    "@types/ioredis": "^4.0.6",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.7",
    "@types/next": "^7.0.6",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.9.0",
    "@types/yup": "^0.26.4",
    "@zeit/next-less": "^1.0.1",
    "babel-plugin-import": "^1.11.0",
    "babel-preset-next": "^1.2.0",
    "chai": "^4.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "less": "^3.9.0",
    "less-vars-to-js": "^1.3.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "volleyball": "^1.5.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "antd": "^3.12.4",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-timeout-handler": "^2.1.2",
    "feature-policy": "^0.2.0",
    "gravatar": "^1.8.0",
    "helmet": "^3.15.0",
    "ioredis": "^4.5.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.23.0",
    "mongoose": "^5.4.2",
    "next": "^9.3.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "serve-favicon": "^2.5.0",
    "uuid": "^3.3.2",
    "yup": "^0.26.6"
  }
}
